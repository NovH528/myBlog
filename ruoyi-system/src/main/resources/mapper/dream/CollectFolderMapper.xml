<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.dream.mapper.CollectFolderMapper">
    
    <resultMap type="CollectFolder" id="CollectFolderResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="name"    column="name"    />
        <result property="parentId"    column="parent_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectCollectFolderVo">
        select id, user_id, name, parent_id, create_time from collect_folder
    </sql>

    <select id="selectCollectFolderList" parameterType="CollectFolder" resultMap="CollectFolderResult">
        <include refid="selectCollectFolderVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
        </where>
    </select>
    
    <select id="selectCollectFolderById" parameterType="Long" resultMap="CollectFolderResult">
        <include refid="selectCollectFolderVo"/>
        where id = #{id}
    </select>

    <insert id="insertCollectFolder" parameterType="CollectFolder" useGeneratedKeys="true" keyProperty="id">
        insert into collect_folder
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateCollectFolder" parameterType="CollectFolder">
        update collect_folder
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCollectFolderById" parameterType="Long">
        delete from collect_folder where id = #{id}
    </delete>

    <delete id="deleteCollectFolderByIds" parameterType="String">
        delete from collect_folder where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>